<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="#000"
        android:textSize="40dp"
        android:layout_above="@+id/outputText"
        android:gravity="right"
        android:paddingRight="25dp"
        android:id="@+id/inputText"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:textColor="#000"
        android:textSize="80dp"
        android:textStyle="bold"
        android:layout_above="@+id/whole"
        android:gravity="right"
        android:paddingRight="25dp"
        android:id="@+id/outputText"
        >


    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/whole"
        android:background="#000"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/firstLine"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:id="@+id/firstLineAC"
                android:text="AC"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:layout_width="80dp"
                android:id="@+id/firstLinedivide"
                android:text="/"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>
            <Button
                android:layout_width="80dp"
                android:id="@+id/firstLineMultiply"
                android:text="X"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:id="@+id/firstLineBack"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="#000"
                android:drawableBottom="@drawable/ic_baseline_arrow_back_24">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/secondLine"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:id="@+id/secondLine7"
                android:text="7"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:layout_width="80dp"
                android:id="@+id/secondLine8"
                android:text="8"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>
            <Button
                android:layout_width="80dp"
                android:id="@+id/secondLine9"
                android:text="9"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:id="@+id/secondLineminus"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="-"
                android:layout_gravity="center"
                android:background="#000">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/thirdLine"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:id="@+id/thirdLine4"
                android:text="4"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:layout_width="80dp"
                android:id="@+id/thirdLine5"
                android:text="5"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>
            <Button
                android:layout_width="80dp"
                android:id="@+id/thirdLine6"
                android:text="6"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:id="@+id/thirdLineplus"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="+"
                android:layout_gravity="center"
                android:background="#000">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ForthLine"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:id="@+id/ForthLine1"
                android:text="1"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:layout_width="80dp"
                android:id="@+id/ForthLine2"
                android:text="2"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>
            <Button
                android:layout_width="80dp"
                android:id="@+id/ForthLine3"
                android:text="3"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:id="@+id/ForthLinePc"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="%"
                android:layout_gravity="center"
                android:background="#000">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/fifthLine"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:id="@+id/fifthLineC"
                android:text="C"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:layout_width="80dp"
                android:id="@+id/fifthLine0"
                android:text="0"
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>
            <Button
                android:layout_width="80dp"
                android:id="@+id/fifthLinedot"
                android:text="."
                android:layout_marginRight="5dp"
                android:background="#000"
                android:layout_height="70dp">

            </Button>

            <Button
                android:id="@+id/fifthLineequals"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:text="="
                android:layout_gravity="center"
                android:background="#000">

            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>